# Environment Variables
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/gaming-news-crawler
DB_NAME=gaming_news

# Notion Configuration
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Crawler Configuration
CRAWLER_INTERVAL=0 */6 * * *  # Every 6 hours
NOTION_SYNC_INTERVAL=0 */4 * * *  # Every 4 hours
MAX_ARTICLES_PER_RUN=50

# Gaming News Sources
GAMING_WEBSITE_URL=https://www.gamespot.com
GAMING_WEBSITE_2=https://www.ign.com
GAMING_WEBSITE_3=https://www.polygon.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
