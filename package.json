{
	"name": "atomix-to-notion",
	"version": "1.0.0",
	"description": "Gaming news crawler that syncs with Notion",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"crawler": "tsx src/index.ts --crawler-once",
		"notion-sync": "tsx src/index.ts --notion-sync-once",
		"setup": "tsx src/scripts/setup.ts",
		"test": "jest",
		"lint": "eslint",
		"clean": "rimraf dist",
		"build-docker-image": "docker build -t isvaku/$npm_package_name:$npm_package_version -t isvaku/$npm_package_name:latest .",
		"push-docker-image": "docker push isvaku/$npm_package_name --all-tags"
	},
	"keywords": [
		"gaming",
		"news",
		"crawler",
		"notion",
		"mongodb",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@notionhq/client": "^4.0.1",
		"axios": "^1.11.0",
		"cheerio": "^1.1.2",
		"cron": "^3.5.0",
		"dotenv": "^16.6.1",
		"mongoose": "^8.17.0",
		"node-html-parser": "^7.0.1",
		"puppeteer": "^24.15.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^20.19.9",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"jest": "^30.0.5",
		"rimraf": "^5.0.10",
		"ts-jest": "^29.4.1",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.6"
}