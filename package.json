{
	"name": "atomix-to-notion",
	"version": "1.0.0",
	"description": "Gaming news crawler that syncs with Notion",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"crawler": "tsx src/index.ts --crawler-once",
		"notion-sync": "tsx src/index.ts --notion-sync-once",
		"setup": "tsx src/scripts/setup.ts",
		"test": "jest",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf dist"
	},
	"keywords": [
		"gaming",
		"news",
		"crawler",
		"notion",
		"mongodb",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@notionhq/client": "^4.0.1",
		"axios": "^1.7.2",
		"cheerio": "^1.0.0-rc.12",
		"cron": "^3.1.6",
		"dotenv": "^16.4.5",
		"mongoose": "^8.17.0",
		"node-html-parser": "^7.0.1",
		"puppeteer": "^24.15.0",
		"winston": "^3.13.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.8",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"jest": "^30.0.5",
		"rimraf": "^5.0.7",
		"ts-jest": "^29.1.5",
		"tsx": "^4.15.7",
		"typescript": "^5.5.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.6"
}